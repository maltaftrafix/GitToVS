<Window x:Class="WPFProgressBar.MainWindow"  
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"  
        xmlns:local="clr-namespace:WPFProgressBar"  
        mc:Ignorable="d"  
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <ProgressBar Grid.Row="1" x:Name="pb_LengthyTaskProgress" Margin="10,20"  Value="10" ></ProgressBar>

        <TextBlock Grid.Row="2" x:Name="lbl_CountDownTimer" HorizontalAlignment="Center" > 00:10</TextBlock>

        <TextBlock Grid.Row="3" x:Name="lbl_TaskStatus" >Status...</TextBlock>
    </Grid>
</Window>  